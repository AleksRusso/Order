@model Orders

<h2>Новый заказ</h2>


<form asp-controller="Order" asp-action="Create" method="post">
    <select asp-for="ProviderId" class="form-control" id="providers">
        <option value="" selected disabled>Поставщики</option>
        @foreach (SelectListItem i in ViewBag.Providers)
        {
            <option value="@i.Value">@i.Text</option>
        }
    </select>
    <br />
    <div class="validation-summary-errors text-danger" asp-validation-summary="ModelOnly"></div>
    <div >
        <label name="Number">Number</label>
        <input type="text" class="form-control" asp-for="Number" />
    </div>
    <br />
    
   
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>