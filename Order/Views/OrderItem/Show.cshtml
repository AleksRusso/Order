@model List<OrderItem>

<h2>Элементы заказа </h2>

<br />

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderItem in Model)
        {
            <tr>
                <td>@orderItem.Name</td>
                <td>@orderItem.Quantity</td>
                <td>@orderItem.Unit</td>
                <td><a asp-action="Edit" asp-controller="OrderItem" asp-route-id="@orderItem.Id">Редактировать</a></td>
                <td><a asp-action="Delete" asp-controller="OrderItem" asp-route-id="@orderItem.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

