@model OrderItem
<h2>Новый элемент заказа</h2>


<form asp-controller="OrderItem" asp-action="CreateOrderItem" method="post">
    <input type="hidden" asp-for="OrderId" />

      <div class="validation-summary-errors text-danger" asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" value="@Model.Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="Quantity">Quantity</label>
        <input type="text" class="form-control" asp-for="Quantity" value="@Model.Quantity" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="Unit">Unit</label>
        <input type="text" class="form-control" asp-for="Unit" value="@Model.Unit">
        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>